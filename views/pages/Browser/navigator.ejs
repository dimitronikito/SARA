<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../../partials/header %>
  </head>

  <body data-spy="scroll" data-target=".navbar" data-offset="50">
    <%include ../../partials/nav %>


    <div class = "jumbotron navOption">
      <h1 class = "text-center"> Browser Navigator </h1>
      <div class = "content">
        <p id = "navigator" class= "text-center"></p>
        <p id = "product" class= "text-center"></p>
        <p id = "version" class = "text-center"></p>
        <p id = "agent" class = "text-center"></p>
        <p id = "platform" class = "text-center"></p>
        <p id = "languague" class = "text-center"></p>
      </div>
    </div>

    <script>

    document.getElementById("navigator").innerHTML = "Your app name is " + navigator.appCodeName + "!";

    document.getElementById("product").innerHTML = "Your product name is " + navigator.product + "!";

