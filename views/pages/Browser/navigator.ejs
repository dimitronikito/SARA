    document.getElementById("agent").innerHTML = "Your user agent is "+ navigator.userAgent + "!";

    document.getElementById("platform").innerHTML = "Your platform is "+ navigator.platform + "!";

    document.getElementById("languague").innerHTML = "Your browser languague is "+navigator.language+"!";

    </script>

  </body>

